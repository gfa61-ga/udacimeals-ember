{{log model}}   <!-- displays 'model' object in the console -->

<ul class="items-container">
    {{#each model as |item|}}
        <li class="menu-item">
            <h4>{{item.name}}</h4>
            <img src="img/{{item.image}}" alt="{{item.name}}">
            <p>
                {{#link-to 'item' item.id}}
                    Details
                {{/link-to}}
<!--            <a href="/item/{{item.id}}">Details</a>  -->
            </p>
        </li>
    {{/each}}
</ul>

